<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sncf.itnovem.dotandroidapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/login_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="@string/title_activity_sign_up" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".CommandActivity"
            android:label="@string/title_activity_command"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ListCommandActivity"
            android:label="@string/title_activity_list_command" />
        <activity
            android:name=".EventsActivity"
            android:label="@string/title_activity_events" />
        <activity
            android:name=".CreateEventActivity"
            android:label="@string/title_activity_create_event"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".UpdateUserActivity"
            android:label="@string/title_activity_update_user"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".SpeakToSarahActivity"
            android:label="@string/title_activity_speak_to_sarah" />
        <activity
            android:name=".NotificationDetailActivity"
            android:label="@string/notification_detail_activity" />
        <activity android:name=".AdminActivity" />
        <activity android:name=".UserDetailActivity"></activity>
    </application>

</manifest>